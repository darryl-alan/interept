<%= render 'shared/errors', obj: @report %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@report, html: {class:"form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :description, class: "form-control", placeholder: "Description", rows: 10 %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input-checkbox") { cb.check_box(class: 'checkbox') + cb.text } %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-4 col-sm-offset-2">
        <%= link_to "Back to list", reports_path %>
      </div>
    </div>
  </div>
</div>
